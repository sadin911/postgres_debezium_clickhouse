{
  "name": "minio-source-connector",
  "config": {
    "connector.class": "io.confluent.connect.s3.source.S3SourceConnector",
    "tasks.max": "1",
    "s3.bucket.name": "source-bucket",
    "s3.region": "us-east-1", 
    "s3.endpoint.override": "http://minio:9000", 
    "s3.path.style.access": "true", 
    "s3.credentials.provider.class": "io.confluent.connect.s3.source.credentials.StaticCredentialsProvider",
    "s3.credentials.provider.access.key.id": "minioadmin",
    "s3.credentials.provider.secret.access.key": "minioadmin",
    "format.class": "io.confluent.connect.s3.format.json.JsonFormat", 
    "kafka.topic": "minio_events", 
    "confluent.topic.bootstrap.servers": "kafka:9092",
    "confluent.topic.replication.factor": "1"
  }
}