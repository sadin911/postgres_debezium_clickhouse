{
  "name": "abcsvb-connector-secure",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "database.hostname": "${env:DB_HOSTNAME}",
    "database.port": "${env:DB_PORT:5432}",
    "database.user": "${env:DB_USER}",
    "database.password": "${env:DB_PASSWORD}",
    "database.dbname": "${env:DB_NAME}",
    "database.server.name": "abcsvb-secure",
    "database.sslmode": "require",
    "database.sslcert": "/opt/kafka/ssl/client-cert.pem",
    "database.sslkey": "/opt/kafka/ssl/client-key.pem",
    "database.sslrootcert": "/opt/kafka/ssl/ca-cert.pem",
    "plugin.name": "pgoutput",
    "slot.name": "debezium_abcsvb_secure_slot",
    "publication.name": "debezium_abcsvb_secure_publication",
    "topic.prefix": "secure.abcsvb",
    "schema.history.internal.kafka.bootstrap.servers": "${env:KAFKA_BOOTSTRAP_SERVERS}",
    "schema.history.internal.kafka.topic": "schema-changes.abcsvb.secure",
    "schema.history.internal.kafka.security.protocol": "SSL",
    "schema.history.internal.kafka.ssl.truststore.location": "/opt/kafka/ssl/kafka.client.truststore.jks",
    "schema.history.internal.kafka.ssl.truststore.password": "${env:KAFKA_TRUSTSTORE_PASSWORD}",
    "schema.history.internal.kafka.ssl.keystore.location": "/opt/kafka/ssl/kafka.client.keystore.jks",
    "schema.history.internal.kafka.ssl.keystore.password": "${env:KAFKA_KEYSTORE_PASSWORD}",
    "schema.history.internal.kafka.ssl.key.password": "${env:KAFKA_KEY_PASSWORD}",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter.schemas.enable": "false",
    "transforms": "unwrap,maskSensitive",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "false",
    "transforms.unwrap.delete.handling.mode": "rewrite",
    "transforms.unwrap.add.fields": "op,ts_ms,source.db,source.table",
    "transforms.maskSensitive.type": "org.apache.kafka.connect.transforms.MaskField$Value",
    "transforms.maskSensitive.fields": "passport_number,national_id,email,phone_number",
    "snapshot.mode": "initial",
    "snapshot.lock.timeout.ms": "10000",
    "decimal.handling.mode": "string",
    "time.precision.mode": "adaptive_time_microseconds",
    "include.schema.changes": "true",
    "tombstones.on.delete": "true",
    "max.batch.size": "1024",
    "max.queue.size": "4096",
    "poll.interval.ms": "2000",
    "heartbeat.interval.ms": "30000",
    "heartbeat.topics.prefix": "heartbeat.secure.abcsvb",
    "sanitize.field.names": "true",
    "provide.transaction.metadata": "true",
    "errors.tolerance": "none",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "database.tcpKeepAlive": "true",
    "database.connectTimeout": "10000",
    "database.socketTimeout": "30000",
    "table.include.list": "abcsvb.log_app_gate,abcsvb.log_config,abcsvb.log_document_type,abcsvb.log_email_notify,abcsvb.log_ext_bltext_services_msc,abcsvb.log_ext_service,abcsvb.log_ext_web_services_abc,abcsvb.log_ext_web_services_aot,abcsvb.log_ext_web_services_apps,abcsvb.log_ext_web_services_msc,abcsvb.log_gate,abcsvb.log_gate_notify,abcsvb.log_gate_problem,abcsvb.log_gate_status,abcsvb.log_gate_type,abcsvb.log_manual_zone,abcsvb.log_nation_flag,abcsvb.log_nationality,abcsvb.log_organization,abcsvb.log_permit_type,abcsvb.log_province,abcsvb.log_remote_control,abcsvb.log_role,abcsvb.log_send_kafka,abcsvb.log_site,abcsvb.log_trans,abcsvb.log_travel_type,abcsvb.log_user_action,abcsvb.log_user_login,abcsvb.log_users,abcsvb.log_visa_type,abcsvb.log_zone,abcsvb.trn_face_finger,abcsvb.trn_flight_number,abcsvb.trn_flight_number_detail,abcsvb.trn_operationlog,abcsvb.trn_passport,abcsvb.trn_passport_walk_around,abcsvb.trn_record_passenger,abcsvb.trn_record_tailgate,abcsvb.trn_send_data,abcsvb.trn_test_external_service"
  }
}
